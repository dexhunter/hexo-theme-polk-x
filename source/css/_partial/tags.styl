.tags-container {
  margin: 0 20px;
  margin-bottom: 2em;
}

.tag-cloud-tags {
  margin: 20px 0;
  text-align: center;
  
  a {
    display: inline-block;
    margin: 10px;
    transition: color 0.3s;
    
    &:hover {
      color: var(--link-hover-color);
      text-decoration: underline;
    }
  }
} 