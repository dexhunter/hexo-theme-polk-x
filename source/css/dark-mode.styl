:root {
  --background-color: #ffffff;
  --text-color: #000000;
  --link-color: #000000;
  --link-hover-color: #333333;
  --gray-color: #999999;
  --code-background: #f8f8f8;
  --border-color: #eaeaea;
  --highlight-comment: #408090;
}

[data-theme="dark"] {
  --background-color: #1a1a1a;
  --text-color: #e0e0e0;
  --link-color: #e0e0e0;
  --link-hover-color: #ffffff;
  --gray-color: #888888;
  --code-background: #2d2d2d;
  --border-color: #333333;
  --highlight-comment: #75a0b0;
}

.theme-toggle {
  position: fixed;
  top: 20px;
  right: 20px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: var(--background-color);
  border: 1px solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 1000;
  transition: all 0.3s ease;
}

.theme-toggle:hover {
  transform: scale(1.1);
}

.theme-toggle svg {
  width: 20px;
  height: 20px;
  fill: var(--text-color);
} 